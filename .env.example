# Email настройки для продакшена
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@hubigr.com

# Base URL для ссылок в письмах
BASE_URL=https://hubigr.com

# JWT Secret (обязательно изменить в продакшене)
JWT_SECRET=hubigr-super-secret-jwt-key-change-in-production-2024

# Database
DATABASE_URL=postgres://user:pass@localhost:5432/hubigr?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=info

# Cloudflare Turnstile (капча)
TURNSTILE_SECRET=your-turnstile-secret-key